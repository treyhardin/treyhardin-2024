---
import Layout from '../layouts/Layout.astro';
import SectionBlock from '../components/sections/SectionBlock.astro';
import { getHomePageContent } from '../utils/sanityClient';
import Header from '../components/global/Header.astro';

const data = await getHomePageContent()
const content = data.content
// console.log(content)
---

<Layout 
	title="Creative Director & Developer"
	theme="light"
	inlineHeader={true}
	barbaNamespace="home"
>
	{content.map((block, i) => (
			<>
				{i == 1 && <Header inline={true} />}
				<SectionBlock type={block._type} content={block} />
			</>
		)
	)}
</Layout>


<style>
	main {
		min-height: 100lvh;
	}
</style>
