---
interface Props {
	title: string;
	theme: string;
	inlineHeader?: boolean;
}

import Header from '../components/global/Header.astro';
import Footer from '../components/global/Footer.astro';
import { ViewTransitions } from "astro:transitions";
import { getSiteSettings, urlFor } from '../utils/sanityClient';

import '../variables/globals.css';
import '../variables/animation.css';
import '../variables/typography.css';
import '../variables/spacing.css';
import '../variables/color.css';

const data = await getSiteSettings()
const { title, theme, inlineHeader = false } = Astro.props;
---

<!doctype html>
<html lang="en" data-theme={theme}>
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="canonical" href="http://www.treyhardin.com" />
		<meta name=”robots” content=”index, follow”> 

		<link rel="icon" type="image/svg+xml" href={urlFor(data[0].favicon).url()} />
		<title>{`${data[0].title} | ${title}`}</title>
		<meta name="description" content={data[0].description} />

		<!-- Facebook Meta Tags -->
		<meta property="og:url" content="http://www.treyhardin.com">
		<meta property="og:type" content="website">
		<meta property="og:title" content={`${data[0].title} | ${title}`}>
		<meta property="og:description" content={data[0].description}>
		<meta property="og:image" content={urlFor(data[0].ogImage).url()}>

		<!-- Twitter Meta Tags -->
		<meta name="twitter:card" content="summary_large_image">
		<meta property="twitter:domain" content="treyhardin.com">
		<meta property="twitter:url" content="http://www.treyhardin.com">
		<meta name="twitter:title" content={`${data[0].title} | ${title}`}>
		<meta name="twitter:description" content={data[0].description}>
		<meta name="twitter:image" content={urlFor(data[0].twitterImage).url()}>

		<meta name="generator" content={Astro.generator} />
    <ViewTransitions />
	</head>
	<body>
		{!inlineHeader && <Header /> }
		<main>
			<slot />
		</main>
		<Footer />
	</body>
</html>