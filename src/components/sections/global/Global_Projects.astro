---
import { urlFor } from "../../../utils/sanityClient";
import Button from "../../global/Button.astro";
import ProjectCard from "../../global/ProjectCard.astro";

const buttonContentIterations = 10;

const { content } = Astro.props;
// console.log(content)
---
<section class="section-projects">
  {content.projects.map((project, i) => {

    if (i < 1) return (
      <ProjectCard project={project} style="half-width" index={i} />
    )

    if (i >= 1) return (
      <ProjectCard project={project} style="default" index={i} />
    )
          
  })}
</section>

  <style>
    .section-projects {
      display: flex;
      flex-direction: row;
      flex-wrap: wrap;
      padding: var(--page-margin) var(--page-margin) var(--space-xl);
      gap: var(--grid-gap);
    }

    .project-card {
      margin-bottom: 100px;
      display: flex;
      flex-direction: column;
      flex: 1 0 25%;
      margin: 0;
      position: relative;
      gap: var(--space-2xs);
    }


    .project-card:nth-child(1) .media {
      /* min-height: calc(100svh - var(--header-height)); */
      flex: 0 1 50%;
      aspect-ratio: 3 / 4;
    }

    .project-card:nth-child(1) .content {
      padding: 0 var(--space-sm);
    }

    .project-card:nth-child(1) .info {
      flex-grow: 1;
      justify-content: center;
    }

    .project-card:nth-child(1) .section-intro {
      position: relative;
      padding: 0;
      mix-blend-mode: unset;
    }


    .project-card:nth-child(1) .content {
      display: flex;
      flex-direction: column;
      justify-content: stretch;
      flex: 0 1 50%;
    }

    .media {
      border-radius: var(--radius-md);
      overflow: hidden;
      aspect-ratio: 4 / 3;
      z-index: 0;
    }

    .image {
      width: 100%;
      height: 100%;
      object-fit: cover;
    }

    .content {
      display: flex;
      flex-direction: column;
    }

    .section-intro {
      display: flex;
      flex-direction: row;
      justify-content: space-between;
      color: var(--color-foreground-secondary);
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      z-index: 2;
      padding: var(--space-2xs);
      color: var(--color-border);
      mix-blend-mode: difference;
      overflow: hidden;
    }

    .info {
      display: flex;
      flex-direction: column;
      gap: var(--space-xl);
    }

    .section-title {
      display: flex;
      flex-direction: column;
      gap: var(--space-3xs);
      overflow: hidden;
    }

    .title-wrapper {
      display: flex;
      flex-direction: row;
      align-items: flex-start;
      gap: var(--space-2xs);
      overflow: hidden;
    }

    .title {
      margin: 0;
    }

    .project-type {
      border: 1px solid var(--color-foreground);
      border-radius: var(--radius-rounded);
      padding: 0.2em 0.8em;
    }
 
    .details {
      max-width: 60ch;
      margin-left: 3em;
      /* align-self: flex-end; */
      display: flex;
      flex-direction: column;
      gap: var(--space-xs);
      align-items: flex-start;
      /* word-wrap: break-word; */
      word-break: break-all;
    }

    @media screen and (max-width: 768px) {
      .section-projects {
        flex-direction: column;
        flex-wrap: nowrap;
      }

      .project-card {
        flex: 0 0 auto;
        padding-bottom: var(--space-md);
      }

      .project-card:nth-child(1) {
        flex-direction: column;
      }

      .project-card:nth-child(1) .content {
        padding: 0;
      }

      .media {
        flex: 0 0 auto;
      }

      .content {
        flex: 0 0 auto;
      }

      .info {
        gap: var(--space-sm);
      }

      .details {
        /* max-width: unset; */
        margin-left: 0;
      }
    }


  </style>