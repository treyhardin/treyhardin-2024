---
const { title, excerpt, technologies } = Astro.props;
---
<section class="project_info">
    <div class="section-intro">
        <p class="caption">Work</p>
        <p class="caption">(02)</p>
    </div>
    <div class="section-title">
        <h2 class="utility">{title}</h2>
        <h3 class="h4">{excerpt}</h3>
        <ul class="technologies">
        {technologies.map((technology) => (
            <li class="technology">{technology.title}</li>
        ))}
        </ul>
    </div>
</section>

<style>
    .project_info {
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        align-items: center;
        min-height: 80svh;
        border-bottom: 1px solid var(--color-border);
        margin: 0 var(--page-margin);
        padding: var(--space-2xs) 0;
    }

    .section-intro {
        display: flex;
        flex-direction: row;
        justify-content: space-between;
        align-self: stretch;
    }

    .section-title {
        flex-grow: 1;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: stretch;
        max-width: 80ch;
        text-align: center;
        gap: var(--space-3xs);
    }

    .technologies {
        list-style: none;
        display: flex;
        flex-direction: row;
        border: 1px solid var(--color-border);
        border-radius: var(--radius-sm);
        padding: 0;
    }

    .technology {
        flex: 1 0 auto;
        display: flex;
        justify-content: center;
        align-items: center;
        border-right: 1px solid var(--color-border);
        padding: var(--space-3xs) var(--space-2xs);
        color: var(--color-foreground-secondary);
        text-align: center;
    }


</style>